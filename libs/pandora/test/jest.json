{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "maxWorkers": 1,
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "./coverage",
  "collectCoverage": true,
  "coveragePathIgnorePatterns": ["./test"],
  "coverageReporters": ["json-summary", "lcov", "text"]
}