{
  "root": "apps/poseidon/server",
  "sourceRoot": "apps/poseidon/server/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/poseidon",
        "main": "apps/poseidon/server/src/main.ts",
        "tsConfig": "apps/poseidon/server/tsconfig.app.json",
        "webpackConfig": "./webpackConfig.js",
        "generatePackageJson": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/poseidon/server/src/environments/environment.ts",
              "with": "apps/poseidon/server/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "poseidon:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/poseidon/server/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "apps/poseidon/server/test/unit/jest.config.js",
        "passWithNoTests": true
      }
    },
    "test:live": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "apps/poseidon/server/test/live/jest.config.js",
        "passWithNoTests": true
      }
    },
    "test:cov": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/poseidon"],
      "options": {
        "jestConfig": "apps/poseidon/server/test/jest.config.js",
        "passWithNoTests": true
      }
    },
    "cov-badges": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "jest-coverage-badges input coverage/apps/poseidon/coverage-summary.json output coverage/apps/poseidon"
      }
    },
    "uploadCoverage": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "ts-node -P ./tsconfig.base.json ./ci/uploadCoverage.ts poseidon coverage/apps/poseidon/"
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "ts-node -P ./tsconfig.base.json ./ci/deploy.ts poseidon {args.slackChannel}"
      }
    }
  },
  "tags": []
}
